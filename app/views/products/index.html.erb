<div class="products_list">
	<div><span class="info" style="float:right"><%= link_to 'Назад', admins_path %></span>
	<h4><%= @category.title %> > <%= @subcategory.title %></h4>
	</div>
	<div class="table-responsive">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th>Название</th>
            <th>Описание</th>
            <th>Цена</th>
            <th>Изображение</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @products.each do |product| %>
            <tr>
              <td><%= product.title %></td>
              <td><%= product.description %></td>
              <td><%= product.price %></td>
              <% if product.pic_url %>
                <td><img class="img img-responsive center-block" src="<%= product.pic_url %>" style="height: 50px;" /></td>
              <% elsif product.image_url %>
                <td><img class="img img-responsive center-block" src="<%= product.image_url %>" style="height: 50px;" /></td>
              <% end %>
              <td class="warning"><%= link_to 'Редактировать', edit_category_subcategory_product_path(@category, @subcategory, product) %></td>
              <td class="danger"><%= link_to 'Удалить', [@category, @subcategory, product], method: :delete %></td>
            </tr>
          <% end %>
        </tbody>
        <tr>
            <td class="info"><%= link_to 'Добавить товар', new_category_subcategory_product_path(@category, @subcategory) %></td>
        </tr>
      </table>
    </div> <!-- end of table responsive for products -->

      <br>

  <p class="msg" id="notice"><%= notice %></p>
  <p class="msg" id="alert"><%= alert %></p>

  <br>

</div>
