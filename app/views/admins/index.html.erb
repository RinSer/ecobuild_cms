      <h4>Товары в категории</h4>

      <div class="table-responsive">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th>Название</th>
            <th>Описание</th>
            <th>Цена</th>
            <th>Изображение</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% category.products.each do |product| %>
