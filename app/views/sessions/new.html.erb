<div class="admin-views">
	<div class="login">
		<h1>Вход</h1>

		<p id="notice" style="background: none;"><%= notice %></p>

		<div id="login-form">

		<%= form_for(:admin, url: sessions_path) do |f| %>

			<div class="field"><%= f.label "Имя пользователя" %> <br/> <%= f.text_field :name %></div>

			</br>

			<div class="field"><%= f.label "Пароль" %> <br/> <%= f.password_field :password %></div>

			<div class="actions"><%= f.submit "Войти", class: 'enter' %></div>

		<% end %>
		</div> <!-- end of login-form -->
	</div> <!-- end of login -->
</div> <!-- end of admin-views -->